<p id="notice"><%= notice %></p>

<h1>Listing Featured Artists</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_artists.each do |featured_artist| %>
      <tr>
        <td><%= featured_artist.artist_id %></td>
        <td><%= featured_artist.song_id %></td>
        <td><%= link_to 'Show', featured_artist %></td>
        <td><%= link_to 'Edit', edit_featured_artist_path(featured_artist) %></td>
        <td><%= link_to 'Destroy', featured_artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

