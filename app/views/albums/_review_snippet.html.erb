<div id="reviewContainer">
<% if @reviews.length > 0 %>
  <h2>Reviews:</h2>
  <table class="table">
    <thead>
      <th>DJ</th>
      <th>Review Text</th>
      <th>Full Text</th>
    </thead>
  <% @reviews.each do |review| %>
    <tr>
      <td><%= link_to review.user.dj_alias, user_path(review.user) %></td>
      <td><%= truncate(review.text, :length => 100, :separator => ' ') %></td>
      <td><%= link_to 'See Full Review', review_path(review) %></td>
    </tr>
  <% end %>
    <tr class="text-center"><td colspan=3><%= link_to 'See All Reviews' %></td></tr>
  </table>
<% else %>
  <div id="dj_link" class="text-center">This album has not yet been reviewed. Be the first to <%=link_to 'write one', new_review_path(review_album_id: album_id)%>!</div>
<% end %>
</div>