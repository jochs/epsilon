4<p id="notice"><%= notice %></p>

<h1 class="text-center"><%= current_user.dj_alias %>s Reviews</h1>
<table class="table" id="playlistContainer">
  <thead>
    <tr>
      <th>Last Updated</th>
      <th>Album Reviewed</th>
      <th>Rating</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.reviews.order(updated_at: :desc).each do |review| %>
      <tr>
        <td><%= review.updated_at %></td>
        <td><%= link_to review.album.name, review %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure you want to delete this review?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="4" class="text-center"><%= link_to 'New Review', new_review_path %></td>
    </tr>
  </tbody>
</table>
